{
  "ConnectionStrings": {
    "MySQLConnection": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  //认证鉴权
  "AuthenticationCenter": {
    "Authority": "http://localhost:5000",
    "ApiName": "file_management_service",
    "ApiSecret": "file_management_service_secret"
  },
  "AllowedHosts": "*",
  //服务地址
  "urls": "http://*:3000",
  "App": {
    "ServerRootAddress": "http://localhost:9001/",
    "CorsOrigins": "http://localhost:8888/"
  },
  //服务发现
  "ServiceDiscovery": {
    "ServiceName": "FileManagementService",
    "Version": "1.0.0-pre",
    "HealthCheckTemplate": "http://localhost:9001/health",
    "Endpoints": [ "http://localhost:9001" ],
    "Consul": {
      "HttpEndpoint": "http://localhost:8500",
      "DnsEndpoint": {
        "Address": "localhost",
        "Port": 8600
      }
    }
  },
  //上传文件配置信息
  "AwineFileOptions": {
    "FileTypes": ".gif,.jpg,.jpeg,.png,.bmp,.GIF,.JPG,.JPEG,.PNG,.BMP,.pdf,.PDF",
    "MaxSize": 52428800, //50MB
    "FileBaseUrl": "wwwroot"
  }
}
